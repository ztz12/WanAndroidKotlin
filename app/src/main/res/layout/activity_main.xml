<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:openDrawer="start"
    tools:context=".ui.activity.home.MainActivity">
 <android.support.design.widget.CoordinatorLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:elevation="@dimen/dp_0">
     <android.support.design.widget.AppBarLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <include layout="@layout/common_toolbar"/>
     </android.support.design.widget.AppBarLayout>
     <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/fl_page"
         app:layout_behavior="@string/appbar_scrolling_view_behavior">
     </FrameLayout>

     <android.support.design.widget.FloatingActionButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@mipmap/icon_up_arrow"
         android:background="@color/colorPrimary"
         android:layout_marginRight="@dimen/dp_16"
         android:layout_gravity="bottom|right"
         android:layout_marginBottom="@dimen/dp_65"
         android:id="@+id/fab"
         app:layout_behavior="@string/bye_burger_float_behavior"/>
     <android.support.design.widget.BottomNavigationView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="bottom"
         app:menu="@menu/bottom_navigation_main"
         android:background="@color/viewBackground"
         app:elevation="@dimen/dp_16"
         app:itemIconTint="@drawable/nav_item_color_state"
         app:itemTextColor="@drawable/nav_item_color_state"
         app:layout_behavior="@string/bye_burger_bottom_behavior"
         android:id="@+id/bottom_navigation_view"></android.support.design.widget.BottomNavigationView>
 </android.support.design.widget.CoordinatorLayout>
  <android.support.design.widget.NavigationView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/navigation"
      android:layout_gravity = "start"
      android:background="@color/viewBackground"
      app:itemBackground="@drawable/drawer_item_bg"
      app:headerLayout="@layout/nav_header_main"
      app:menu="@menu/nav_menu"></android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_search_pager_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_12"
    android:layout_marginStart="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_8"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/viewBackground"
    app:cardCornerRadius="@dimen/dp_3"
    app:cardElevation="@dimen/dp_2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="置顶"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@drawable/bg_home_tv"
            android:id="@+id/tv_home_top"
            android:visibility="gone"
            tools:visibility="visible"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_home_top"
            android:text="新"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bg_home_tv"
            android:textSize="@dimen/sp_12"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_12"
            android:id="@+id/tv_home_refresh"
            android:visibility="gone"
            tools:visibility="visible"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_home_refresh"
            android:text="@string/app_name"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_12"
            android:id="@+id/tv_home_article_tag"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_home_article_tag"
            android:text="@string/home_pager"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_12"
            android:id="@+id/tv_home_author"/>
        <TextView
            android:id="@+id/tv_home_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_time"
            android:drawablePadding="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_alignParentRight="true"
            tools:text="14小时之前"
            android:textColor="@color/comment_text"
            android:paddingRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/iv_home_pic"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_90"
            android:layout_below="@+id/tv_home_author"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_10"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_home_author"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_toRightOf="@+id/iv_home_pic"
            android:ellipsize="end"
            android:gravity="top|start"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:paddingBottom="@dimen/dp_6"
            android:textSize="@dimen/sp_16" />
        <TextView
            android:id="@+id/tv_home_chapterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="四大组件/handler"
            android:gravity="center"
            android:layout_below="@id/tv_article"
            android:layout_toRightOf="@id/iv_home_pic"
            android:textColor="@color/colorPrimaryOverlay"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_8"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:id="@+id/iv_collect"
                android:src="@drawable/icon_like_article_not_selected"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
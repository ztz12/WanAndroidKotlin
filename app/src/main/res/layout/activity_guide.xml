<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_cloud_night"/>

    <com.example.zhangtianzhu.wanandroidkotlin.widget.CountDownView
        android:id="@+id/cdv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_20"
        app:cd_animator_time="3"
        app:cd_animator_time_unit="ç§’"
        app:cd_arc_color="@color/black"
        app:cd_arc_width="@dimen/dp_2"
        app:cd_bg_color="@color/alpha_10_black"
        app:cd_circle_radius="@dimen/dp_20"
        app:cd_location="top"
        app:cd_retreat_type="forward"
        app:cd_text_color="@color/Blue"
        app:cd_text_size="@dimen/sp_10" />

</FrameLayout>
